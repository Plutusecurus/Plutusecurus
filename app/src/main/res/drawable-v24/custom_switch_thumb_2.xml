<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:state_checked="false">
        <shape android:shape="oval">
            <solid android:color="#D9C9C9"/>
            <size android:height="18dp"
                android:width="18dp"
                />
            <stroke android:color="#D9C9C9"
                android:width="2dp"/>
            <padding android:bottom="3dp" android:left="3dp"
                android:right="3dp" android:top="3dp"/>
        </shape>
    </item>
    <item
        android:state_checked="true">
        <shape android:shape="oval">
            <solid android:color="#ED1C24"/>
            <size android:height="18dp"
                android:width="18dp"/>
            <stroke android:color="#ED1C24"
                android:width="2dp"/>
            <padding android:bottom="3dp" android:left="3dp"
                android:right="3dp" android:top="3dp"/>
        </shape>

    </item>
</selector>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="270dp"
        app:cardCornerRadius="30dp"
        android:backgroundTint="#F69E9E">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/amount_card"
                android:backgroundTint="#F4B9B9"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="INR"
                    android:layout_marginStart="22dp"
                    android:layout_gravity="center_vertical"
                    android:textSize="26sp"
                    android:textColor="#535353"
                    />
                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="end"
                    android:hint="100000"
                    android:inputType="number"
                    android:textSize="22sp"
                    android:layout_marginEnd="26dp"
                    android:id="@+id/money_spend"
                    android:textColor="#535353"
                    android:textColorHint="#535353"/>
            </androidx.cardview.widget.CardView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/amount_card"
                android:text="SELECT CATEGORY"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_margin="8dp"
                android:textColor="#CD4A4A"
                android:id="@+id/select_category_text"/>



            <androidx.cardview.widget.CardView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:id="@+id/essentials_button"
                app:layout_constraintTop_toBottomOf="@id/food_button"
                android:layout_marginTop="10dp"
                app:layout_constraintEnd_toStartOf="@id/entertainment_button"
                app:layout_constraintStart_toStartOf="parent"
                app:cardCornerRadius="30dp"
                android:backgroundTint="@color/white"
                android:clickable="true"
                android:focusable="true">
                <ImageView
                    android:id="@+id/essentials"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_hand_holding_usd"
                    android:layout_gravity="center"
                    app:tint="#F69E9E"/>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:id="@+id/entertainment_button"
                app:layout_constraintTop_toTopOf="@id/essentials_button"
                app:layout_constraintStart_toEndOf="@id/essentials_button"
                app:layout_constraintEnd_toStartOf="@id/gift_button"
                app:cardCornerRadius="30dp"
                android:backgroundTint="@color/white"
                android:clickable="true"
                android:focusable="true">
                <ImageView
                    android:id="@+id/entertainment"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_coins"
                    android:layout_gravity="center"
                    app:tint="#F69E9E"/>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:id="@+id/gift_button"
                app:layout_constraintTop_toTopOf="@id/essentials_button"
                app:layout_constraintStart_toEndOf="@id/entertainment_button"
                app:layout_constraintEnd_toStartOf="@id/miscellaneous_button"
                app:cardCornerRadius="30dp"
                android:backgroundTint="@color/white"
                android:clickable="true"
                android:focusable="true">
                <ImageView
                    android:id="@+id/gift"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_gift"
                    android:layout_gravity="center"
                    app:tint="#F69E9E"/>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:id="@+id/miscellaneous_button"
                app:layout_constraintTop_toTopOf="@id/essentials_button"
                app:layout_constraintStart_toEndOf="@id/gift_button"
                app:layout_constraintEnd_toEndOf="parent"
                app:cardCornerRadius="30dp"
                android:backgroundTint="@color/white"
                android:clickable="true"
                android:focusable="true">
                <ImageView
                    android:id="@+id/miscellaneous"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_question"
                    android:layout_gravity="center"
                    app:tint="#F69E9E"/>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="60dp"
                android:layout_height="60dp"
                app:cardCornerRadius="30dp"
                android:id="@+id/house_button"
                app:layout_constraintTop_toBottomOf="@id/select_category_text"
                android:layout_marginTop="10dp"
                app:layout_constraintEnd_toStartOf="@id/food_button"
                app:layout_constraintStart_toStartOf="parent"
                android:clickable="true"
                android:backgroundTint="@color/white"
                android:focusable="true">
                <ImageView
                    android:id="@+id/house"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_home"
                    android:layout_gravity="center"
                    app:tint="#F69E9E" />
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:id="@+id/food_button"
                app:layout_constraintTop_toTopOf="@id/house_button"
                app:layout_constraintStart_toEndOf="@id/house_button"
                app:layout_constraintEnd_toStartOf="@id/medicine_button"
                app:cardCornerRadius="30dp"
                android:backgroundTint="@color/white"
                android:clickable="true"
                android:focusable="true">
                <ImageView
                    android:id="@+id/food"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_pizza_slice"
                    android:layout_gravity="center"
                    app:tint="#F69E9E"/>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:id="@+id/medicine_button"
                app:layout_constraintTop_toTopOf="@id/house_button"
                app:layout_constraintStart_toEndOf="@id/food_button"
                app:layout_constraintEnd_toStartOf="@id/transport_button"
                app:cardCornerRadius="30dp"
                android:backgroundTint="@color/white"
                android:clickable="true"
                android:focusable="true">
                <ImageView
                    android:id="@+id/medicine"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_briefcase_medical"
                    android:layout_gravity="center"
                    app:tint="#F69E9E"/>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:id="@+id/transport_button"
                app:layout_constraintTop_toTopOf="@id/house_button"
                app:layout_constraintStart_toEndOf="@id/medicine_button"
                app:layout_constraintEnd_toEndOf="parent"
                app:cardCornerRadius="30dp"
                android:backgroundTint="@color/white"
                android:clickable="true"
                android:focusable="true">
                <ImageView
                    android:id="@+id/transport"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_subway"
                    android:layout_gravity="center"
                    app:tint="#F69E9E"/>
            </androidx.cardview.widget.CardView>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:id="@+id/ok_button"
                android:text="OK"
                android:layout_marginBottom="8dp"
                android:textSize="16sp"
                android:clickable="true"
                android:focusable="true"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginEnd="26dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toStartOf="@id/ok_button"
                app:layout_constraintBottom_toBottomOf="@id/ok_button"
                app:layout_constraintTop_toTopOf="@id/ok_button"
                android:id="@+id/cancel_button"
                android:text="CANCEL"
                android:textSize="16sp"
                android:clickable="true"
                android:focusable="true"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginEnd="16dp"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>